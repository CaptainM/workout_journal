@import url(https://fonts.googleapis.com/css?family=Calligraffitti);

body {
  background-image: url(<%=image_path '/images/mxxgpne.jpg'%>);
  font-family: 'Calligraffitti', cursive;
  text-align: center;
  background-repeat: no-repeat;
  background-size: 100% 1500px;
  font-weight: bold;
}

h1 {
  padding: 0;
  margin: 0;
}

h3 {
  margin: 0;
}

#login {
  float: left;
  padding-left: 120px;
  
}

#header {
 
}

.greybox
{
    margin-top: 20px;
    margin-left: 130px;
    background-color: rgba(255,255,255, 0);
    color: #333333;
    padding: 0px;
    font-size: 19px;
    font-weight: bold;
    width: 70%;
    text-align: center;
}

div#modal {
	min-width: 100%;
	min-height: 90%;
	background: rgba(0,0,0,.5);
  position: absolute;
  z-index: 10;
  display: none;
  text-align: center;
}

span#close {
  float: right;
  color: white;
  font-size: 30px;
}

a {
  cursor: pointer;
  font-weight: bold;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

a:visited {
  color: black;
}

